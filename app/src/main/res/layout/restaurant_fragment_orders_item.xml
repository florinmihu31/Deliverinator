<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/restaurant_orders_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Client Name" />

        <TextView
            android:id="@+id/restaurant_orders_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_orders_name"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/restaurant_orders_price"
            tools:text="Client Address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_orders_address"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/restaurant_orders_price"
            tools:text="Client Order" />

        <TextView
            android:id="@+id/restaurant_orders_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="10.00 RON" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>